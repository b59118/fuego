<!--
  Derived configuration display pane for inherited builders.
-->
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:f="/lib/form">
	<f:section title="${%Inherited Builders}">
		<f:advanced align="left" title="Expand inherited Build steps">
			<f:block>
				<j:invoke var="instances"
					on="${it}" method="getBuildersList"
				>
					<j:arg value="${IMode_INHERIT_FORCED}"
						type="${IMode_Type}" classLoader="${cl}"
					/>
				</j:invoke>
				<f:hetero-list name="derived-builders" hasHeader="true"
					descriptors="${h.getBuilderDescriptors(it)}"
					items = "${instances}"
				/>
			</f:block>
		</f:advanced>
	</f:section>
</j:jelly>